@model MvcTicariOtomasyon.Models.Classes.Employee
@{
    ViewBag.Title = "GetEmployee";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Personel Güncelleme Ekranı</h2>
<br />

@using (Html.BeginForm("UpdateEmployee", "Employee", FormMethod.Post))
{
    <div class="form-group">
        @Html.HiddenFor(x => x.EmployeeId)

        <p>Müşteri Adı</p>
        @Html.TextBoxFor(x => x.EmployeeName, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.EmployeeId, "", new { @style = "color:red" })
        <br />
        <p>Müşteri Soyadı</p>
        @Html.TextBoxFor(x => x.EmployeeLastName, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.EmployeeLastName, "", new { @style = "color:red" })
        <br />
        <p>Şehir</p>
        @Html.TextBoxFor(x => x.EmployeeImage, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.EmployeeImage, "", new { @style = "color:red" })
        <br />
        <p>Mail</p>
        @Html.DropDownListFor(x => x.Departmentid, (List<SelectListItem>)ViewBag.rslt1, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Departmentid, "", new { @style = "color:red" })
        <br />
        <button class="btn btn-primary">Güncelle</button>
    </div>
}

