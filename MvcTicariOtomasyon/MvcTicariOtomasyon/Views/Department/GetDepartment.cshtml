@model MvcTicariOtomasyon.Models.Classes.Department
@{
    ViewBag.Title = "GetDepartment";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Departman Güncelleme</h2>
<br />
@using (Html.BeginForm("UpdateDepartment", "Department", FormMethod.Post))
{
<div class="form-group">
    @Html.LabelFor(x => x.DepartmentName)
    @Html.TextBoxFor(x => x.DepartmentName, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.DepartmentName, "", new { @style = "color:red" })
    @Html.HiddenFor(x => x.DepartmentId)
</div>
    <p></p>
    <button class="btn btn-primary" style="margin-left: 5px">Güncelle</button>
}

