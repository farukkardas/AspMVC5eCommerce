@using MvcTicariOtomasyon.Models.Classes
@model List<SaleMovement>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table id="tbl1" class="table table-bordered" style="margin-top: 20px; margin-left: 10px; margin-right: 20px">
    <br />
    <thead>
        <tr>
            <th>ID</th>
            <th>Ürün Adı</th>
            <th>Müşteri Adı</th>
            <th>Personel Adı</th>
            <th>Adet</th>
            <th>Fiyat</th>
            <th>Toplam Fiyat</th>
            <th>Tarih</th>
            <th>Güncelle</th>
            <th>Detaylar</th>
        </tr>
    </thead>

    @foreach (var w in Model)
    {

        <tr>
            <td>@w.SaleMovementId</td>
            <td>@w.Products.ProductName</td>
            <td>@w.Customers.CustomerName @w.Customers.CustomerLastName</td>
            <td>@w.Employees.EmployeeName @w.Employees.EmployeeLastName</td>
            <td>@w.SaleMovementUnit</td>
            <td>@w.SaleMovementPrice</td>
            <td>@w.SaleMovementTotalPrice</td>
            <td>@w.SaleMovementDate</td>
            <td><a href="~/Sale/GetSale/@w.SaleMovementId" class="btn btn-primary">Güncelle</a></td>
            <td><a href="~/Sale/PrintSale/@w.SaleMovementId" class="btn btn-info">Detaylar</a></td>
        </tr>
    }



</table>
<a href="~/Sale/NewSale" class="btn btn-success">Yeni Satış Ekle</a>


<link href="~/Content/bootstrap.css" rel="stylesheet" />


<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>

<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>

<script>
    $('#tbl1').dataTable({});
</script>

